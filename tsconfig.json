{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
